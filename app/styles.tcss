Screen {
    background: #020005;
    color: #eadcff;
}

/* HEADER */
Header {
    background: #0a0014;
    color: #ff4dff;
}

/* FOOTER */
Footer {
    background: #0a0014;
    color: #b066ff;
}

/* LOG WINDOW */
#log {
    background: #050008;
    border: solid #ff4dff;
    padding: 1;
}

/* INPUT */
Input {
    background: #0a0014;
    color: #ffffff;
    border: solid #b066ff;
}

/* STATUS LINE */
#status_line {
    background: #100020;
    color: #ff4dff;
    padding-left: 1;
}

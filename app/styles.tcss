   ========================================================= */

Screen {
    background: #040008;
}

/* OUTER glow aura frame */
#outer_frame {
    width: 100%;
    height: 100%;
    padding: 1 2;

    background: #040008;

    /* default border (will pulse via classes) */
    border: heavy #ff2dff;
}

/* INNER main terminal frame */
#inner_frame {
    width: 100%;
    height: 100%;
    padding: 1 2;

    background: #090012;
    border: round #7a00ff;
}

/* Pulse states (outer border changes to simulate glow) */
.glow1 { border: heavy #ff3cff; }
.glow2 { border: heavy #c400ff; }
.glow3 { border: heavy #7a00ff; }

/* Header */
#header {
    height: 3;
    content-align: center middle;

    background: #07000f;
    border: round #5b00b8;

    color: #ff7bff;
    text-style: bold;
}

/* Splash container */
#splash_box {
    height: 1fr;
    padding: 1 2;

    background: #07000f;
    border: round #6f00ff;

    content-align: center middle;
}

/* ASCII logo */
#splash_logo {
    color: #ff3cff;
    text-style: bold;
}

/* Splash status text */
#splash_text {
    color: #d7b3ff;
    text-style: italic;
}

/* Output area */
#output {
    height: 1fr;
    padding: 1 2;

    background: #06000d;
    border: round #6f00ff;

    color: #f5e6ff;
}

/* Input bar */
#inputbar {
    height: 3;
    padding: 0 1;

    background: #06000d;
    border: round #6f00ff;
}

/* Prompt label */
#prompt {
    width: 10;
    content-align: left middle;

    color: #ff7bff;
    text-style: bold;
}

/* Input field */
Input {
    width: 1fr;
    height: 1;

    background: #140020;
    color: #ffffff;

    border: none;
}

Input:focus {
    background: #1b002b;
}

/* Placeholder text */
Input.-placeholder {
    color: #a88ac8;
}

/* Scrollbar glow */
RichLog {
    scrollbar-color: #b300ff;
    scrollbar-color-hover: #ff3cff;
}

/* Nice spacing */
#header, #splash_box, #output, #inputbar {
    margin: 0 0 1 0;
}
